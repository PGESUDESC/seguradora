@model IEnumerable<Seguradora.Cotacao>

@{
    ViewBag.Title = "Cotações";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Cotação</h2>

<p>
    @Html.ActionLink("Adicionar", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Número")
        </th>
        <th>
            @Html.DisplayName("Segurado")
        </th>
        <th>Status</th>
        <th>
            @Html.DisplayName("Modalidade")
        </th>
        <th>
            @Html.DisplayName("Data inicial")
        </th>
        <th>
            @Html.DisplayName("Data final")
        </th>
        <th>
            @Html.DisplayName("Marca")
        </th>
        <th>
            @Html.DisplayName("Modelo")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NumeroAditivo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Segurado1.Nome)
        </td>
        <td>


        </td>
        <td>

        </td>
        <td>
            @{var dataInicial = item.DataInicial.HasValue ? item.DataInicial.Value.ToString("dd/MM/yyyy") : "";}
            @dataInicial
        </td>
        <td>
            @{var dataFinal = item.DataFinal.HasValue ? item.DataFinal.Value.ToString("dd/MM/yyyy") : "";}
            @dataFinal
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Marca1.Descricao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Modelo1.Descricao)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Codigo })
            @if(item.status != (int)Seguradora.Comum.StatusCotacaoEnum.Cadastrada){
                @Html.ActionLink("Visualizar Cotacao", "CotacaoCompleta", new { id = item.Codigo });
            }
        </td>
    </tr>
}

</table>
