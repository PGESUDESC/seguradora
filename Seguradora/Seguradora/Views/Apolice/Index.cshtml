@model IEnumerable<Seguradora.Apolice>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Adicionar", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Número do aditivo")
        </th>
        <th>
            @Html.DisplayName("Data de vigência")
        </th>
        <th>
            @Html.DisplayName("Data da primeira parcela")
        </th>
        <th>
            @Html.DisplayName("Código da cotação")
        </th>
        <th>
            @Html.DisplayName("Tipo do automóvel")
        </th>
        <th>
            @Html.DisplayName("Segurado")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NroAditivo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DataVigencia)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DataPrimeiraParcela)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cotacao1.Codigo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ObjetoSegurado1.TipoAutomovel)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Segurado1.Nome)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Detalhar", "Details", new { id = item.ID }) |
            @Html.ActionLink("Excluir", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
