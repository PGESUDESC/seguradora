@model IEnumerable<Seguradora.Sinistro>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Adicionar", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NroBO)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Avarias)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DescricaoOcorrido)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Apolice.ID)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NroBO)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Avarias)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DescricaoOcorrido)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Apolice.ID)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Codigo }) |
            @Html.ActionLink("Details", "Details", new { id=item.Codigo }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Codigo })
        </td>
    </tr>
}

</table>
