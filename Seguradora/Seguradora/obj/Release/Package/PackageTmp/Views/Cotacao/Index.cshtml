@model IEnumerable<Seguradora.Cotacao>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Cotação</h2>

<p>
    @Html.ActionLink("Adicionar", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Número")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Segurado)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Modalidade)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataInicial)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataFinal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Marca)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Modelo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NumeroAditivo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Segurado1.Nome)
        </td>
        <td>
            @((Seguradora.Comum.ModalidadeEnum)item.Modalidade)
        </td>
        <td>
            @{var dataInicial = item.DataInicial.HasValue ? item.DataInicial.Value.ToString("dd/MM/yyyy") : "";}
            @dataInicial
        </td>
        <td>
            @{var dataFinal = item.DataFinal.HasValue ? item.DataFinal.Value.ToString("dd/MM/yyyy") : "";}
            @dataFinal
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Marca1.Descricao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Modelo1.Descricao)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Codigo }) |
            @Html.ActionLink("Details", "Details", new { id=item.Codigo }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Codigo })
        </td>
    </tr>
}

</table>
